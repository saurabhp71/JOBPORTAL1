@model JobPortalLibrary.JobSeeker.SeekerUser

@{
    ViewBag.Title = "ProjectDetailsPop";
}
@section Scripts {

    <script type="text/javascript">
        $(document).ready(function () {
            $('input[name="ProjectStatus"]').click(function () {
                if ($('#Finished').is(':checked')) {
                    $('#Enddate').show();
                } else {
                    $('#Enddate').hide();
                }
            });
        });
    </script>
    @Scripts.Render("~/bundles/jqueryval")
}

@using (Html.BeginForm())
{


    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ProjectTitle, "Project Title", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProjectTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ProjectTitle, "", new { @class = "text-danger" })
            </div>
        </div><br />
        <div class="form-group">
            @Html.LabelFor(model => model.ClientName, "Client", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ClientName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ClientName, "", new { @class = "text-danger" })
            </div>
        </div><br />
        <div class="item form-group" id="status">
            @Html.LabelFor(model => model.ProjectStatus, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Label("In Progress")
                @Html.RadioButtonFor(Model => Model.ProjectStatus, "In Progress", new { @id = "Progress" })
                @Html.Label("Finished")
                @Html.RadioButtonFor(model => model.ProjectStatus, "Finished", new { @id = "Finished" })
                @Html.ValidationMessageFor(model => model.ProjectStatus, "", new { @class = "text-danger" })
            </div>
        </div><br />
        <div class="item form-group">
            @Html.LabelFor(model => model.StartDate, "Worked from", htmlAttributes: new { @class = "col-form-label col-md-3 col-sm-3 label-align required" })
            <div class="col-md-6 col-sm-6 ">
                @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control", style = " width: 135px;" } })
                @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
            </div>
        </div><br />
        <div class="item form-group" id="Enddate" style="display:none">
            @Html.LabelFor(model => model.EdnDate, "Worked Till", htmlAttributes: new { @class = "col-form-label col-md-3 col-sm-3 label-align required" })
            <div class="col-md-6 col-sm-6 ">
                @Html.EditorFor(model => model.EdnDate, new { htmlAttributes = new { @class = "form-control", style = " width: 135px;" } })
                @Html.ValidationMessageFor(model => model.EdnDate, "", new { @class = "text-danger" })
            </div>
        </div><br />

        <div class="form-group">
            @Html.LabelFor(model => model.ProjectDetails, "Details Of Project:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProjectDetails, new { htmlAttributes = new { @class = "form-control", style = " width:650px;height: 70px;" } })
                @Html.ValidationMessageFor(model => model.ProjectDetails, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <br />
    <br />

    <div class="form-group" style="margin-left:550px">
        <div class="col-md-offset-2 col-md-10">
            <button type="button" class="btn btn-default" data-dismiss="modal">CANCEL</button>
            <input type="submit" formaction="@Url.Action("ProjectDetailsPop","JobSeeker",new  { Seekercode = Model.Seekercode })" value="SAVE" formmethod="post" class="btn btn-primary" />
        </div>
    </div>

}


