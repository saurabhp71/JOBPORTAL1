@model JobPortalLibrary.JobSeeker.SeekerUser

@{
    ViewBag.Title = "SeekerResume";
    Layout = "~/Views/Shared/JobSeeker_Layout.cshtml";
}
<html>
<head>

    @section Scripts {

        <script type="text/javascript">
            $(function () {
                $(".SeekerDetailsPhoto").click(function () {
                    var $buttonClicked = $(this);
                    var id = $buttonClicked.attr('data-id')
                    /* var id = $(this).closest("tr").find("td").eq(0).html();*/
                    $.ajax({
                        type: "GET",
                        url: "/JobSeeker/SeekerDetailsPhoto",
                        data: '{id: "' + id + '" }',
                        contentType: "application/json; charset=utf-8",
                        dataType: "html",
                        success: function (response) {
                            $("#partialModal").find(".modal-body").html(response);
                            $("#partialModal").modal('show');
                        },
                        failure: function (response) {
                            alert(response.responseText);
                        },
                        error: function (response) {
                            alert(response.responseText);
                        }
                    });
                });
            });
            $(function () {
                $(".SeekerResumeUpload").click(function () {
                    var $buttonClicked = $(this);
                    var id = $buttonClicked.attr('data-id')
                    /* var id = $(this).closest("tr").find("td").eq(0).html();*/
                    $.ajax({
                        type: "GET",
                        url: "/JobSeeker/SeekerResumeUpload",
                        data: '{id: "' + id + '" }',
                        contentType: "application/json; charset=utf-8",
                        dataType: "html",
                        success: function (response) {
                            $("#partialModal1").find(".modal-body").html(response);
                            $("#partialModal1").modal('show');
                        },
                        failure: function (response) {
                            alert(response.responseText);
                        },
                        error: function (response) {
                            alert(response.responseText);
                        }
                    });
                });
            });

        </script>
    }


    <style type="text/css">
        .ProfilePanel {
            /* margin-top: -20%;
            margin-bottom: 40%;*/
            background-color: lightblue !important;
            height: 200px !important;
            width: 70rem !important;
        }

        .tabprofile {
            margin-top: -20%;
            margin-bottom: 10%;
        }

        .tbprofiless {
            height: 270px;
            padding: 20px;
        }

        a {
            color: darkslategray;
            font-weight: bold;
        }

            a:hover {
                color: red;
            }

        .img-seeker {
            height: 120px;
            width: 120px;
            border: 2px ridge;
            border-radius: 300%;
            background-image: url('../../Content/images/profile icon.jpg');
            background-position: center;
            background-size: 150px;
        }

        .profile-image {
            padding: 50px;
        }

        .SeekerDetailsPhoto {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-left: 65px;
            margin-top: -29px;
            width: 50px;
        }

        .SeekerResumeUpload {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 37px;
            width: 263px;
            background: lightskyblue;
            margin-top: 10px;
            margin-left: 247px;
        }
        .deleteresume {
            margin-left: 500px;
            background: white;
            border: 0;
            color: lightskyblue;
        }
        .resumelnk {
            margin-left: 350px;
            color: blue;
            font-size: 14px;
        }
        }
    </style>

</head>
<body>

    <hr />

    <hr />

    <!-- ProfilePanel Start -->
    <form style="margin-left:35px">
        <div class="ProfilePanel">
            <div class="profile-image">
                <img class="img-seeker" src="~/Content/images/@Model.ProfileIMG" height="250" width="250">
                <a href="javascript:void(0);" class="SeekerDetailsPhoto" data-id="@Model.Seekercode">
                    <i class='fa fa-camera' style='font-size:25px'></i>
                </a>
                <dd style="margin-left:16%;margin-top:-11%; font-size:25px;color:black;">
                    @Html.DisplayFor(model => model.SeekerName)
                </dd>
                <dd style="margin-left:16%;margin-top:-1%; font-size:15px;color:blue;">
                    <i class="fa fa-envelope"></i>
                    @Html.DisplayFor(model => model.EmailId)
                </dd>
                <dd style="margin-left:56%;margin-top:-3%; font-size:15px;color:black;">
                    <i class="fa fa-phone"></i>
                    @Html.DisplayFor(model => model.ContactNo1)
                </dd>
                <dd style="margin-left:16%;margin-top:3%; font-size:15px;color:black;">
                    <label for="html" style="color:black">Profile Completed</label>
                    <lable style="margin-left:617px;" for="html" value="@ViewBag.TotalCount">@ViewBag.TotalCount </lable><br />
                </dd>
            </div><br />
            <div class="progress" style="width:70%; height:10px; margin-left:19%;margin-top:-82px;">
                <div class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:@ViewBag.Total%;">
                    <span class="sr-only">70% Complete</span>
                </div>
            </div>
        </div>
    </form>
    <!-- ProfilePanel End -->
    <hr />
    <!-- Dashboard start -->

    <form style="margin-left:50px">

        <div class="card" style="width:15rem;">

            <ul class="list-group list-group-flush">
                <li class="list-group-item" id="CreateRound">  <a href="@Url.Action("SeekerDetails","JobSeeker")">Personal Details</a> </li>
                <li class="list-group-item">  <a href="@Url.Action("EducationDetails", "JobSeeker")">Education Details</a></li>
                <li class="list-group-item">  <a href="@Url.Action("EmploymentDetails", "JobSeeker")">Employment Details</a></li>
                <li class="list-group-item">  <a href="@Url.Action("ProjectDetails","JobSeeker")">Project Details</a></li>
                <li class="list-group-item">  <a href="@Url.Action("CareerProfile", "JobSeeker")">Career Profile</a></li>
                <li class="list-group-item">  <a href="@Url.Action("SeekerResume", "JobSeeker")">Resume</a></li>
            </ul>
        </div>
    </form>
    <!-- Dashboard End -->
    @*<form style="margin-left:50px">*@
    <div class="tabprofile">
        <div class="card" style="width:50rem; margin-left:350px;border-radius:20px;box-shadow: 5px 10px 10px lightgrey">

            <div class="tbprofiless">
                <div style="display: flex">
                    <h3 style="text-align: left; font-family:  Constantia;">Resume</h3>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;


                </div>
                <dl class="dl-horizontal" style=" margin-left: 20px;">
                    <dd>
                        @Html.HiddenFor(model => model.Seekercode, new { })
                    </dd>
                    <label for="html" style="color:lightgray ">Resume is the most important document recruiters look for. Recruiters generally do not look at profiles without resumes.</label>
                    @using (Html.BeginForm("SeekerResumeDelete", "JobSeeker", FormMethod.Post))
                    {
                        <div style="margin-top:30px;">
                            @if (ViewBag.ResumePDF != "")
                            {
                                <div id="div1">
                                    <dd style="display:flex;">
                                        @Html.DisplayFor(model => model.ResumePDF)
                                        <button class="deleteresume" type="submit">DELETE RESUME</button>
                                    </dd>
                                </div>
                            }
                        </div>
                    }
                    <button style="display: flex;align-items: center; justify-content: center" href="javascript:void(0);" class="SeekerResumeUpload" data-id="@Model.Seekercode">Upload Resume</button>
                </dl>
                @if (ViewBag.ResumePDF == "")
                {
                    <a class="resumelnk" href="https://www.resumebuilder.com/search?q" target="_blank">CREATE RESUME</a>
                }
            </div>
        </div>
    </div>
    @*</form>*@

    <div id="partialModal" class="modal" tabindex="-1" role="dialog" style="position:center">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header"></div>
                <div class="modal-body">
                </div>
            </div>
        </div>
    </div>
    <div id="partialModal1" class="modal" tabindex="-1" role="dialog" style="position:center">
        <div class="modal-dialog modal-fullscreen-md-down" role="document">
            <div class="modal-content">
                <div class="modal-header"></div>
                <div class="modal-body">
                </div>
            </div>
        </div>
    </div>
</body>
</html>
